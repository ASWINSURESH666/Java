    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        int x=Integer.parseInt(box1.getText());
        int y=Integer.parseInt(box2.getText());
        
        double z=0;
        if(add.isSelected())
            z=x+y;
        else if(sub.isSelected())
            z=x-y;
        else if(mult.isSelected())
            z=x*y;
        else if(div.isSelected()){
            if (y!=0)
                z= (double)x/y;
            else{
                box3.setText("Error!!!");
                return;
            }
      
        }
        box3.setText(Double.toString(z));
    }                                        

